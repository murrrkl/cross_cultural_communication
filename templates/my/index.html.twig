{% extends 'base.html.twig' %}

{% block title %}Межкультурные ситуации{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    textarea {
        width: 630px;
        height: 300px;
        font-size: 13px;
        border: 1px solid #cecece;
        background: #F6F6f6;
        border-radius: 8px;
    }
    button {
        width: 630px;
        height: 50px;
        font-size: 18px;
        background: lightskyblue;
        border-radius: 8px;
    }
    .place { height: 10px;}
</style>

<div class="example-wrapper">
    <h1>Введите описание вашей ситуации</h1>
    <form method="POST" action="{{ url('my_search') }}">
        <div><textarea name="a" type="text"></textarea></div>
        <div class="place"> </div>
        <div><button>Получить обоснование</button></div>
    </form>

</div>
{% endblock %}
